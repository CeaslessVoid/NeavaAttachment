<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BuildingBase">
        <defName>ModificationStation</defName>
        <label>modification station</label>
        <description>This machine can infuse modifications into the weapon that is placed on this station. Weapon modifications must placed close to this station for it to be a target. Once a weapon modification is infused into the weapon, it cannot be extracted cleanly.</description>
        <thingClass>NeavaMods.Building_WeaponMod</thingClass>
        <graphicData>
            <texPath>Things/Building/ModificationStation</texPath>
            <graphicClass>Graphic_Multi</graphicClass>
            <shadowData>
                <volume>(0.9,0.6,9.9)</volume>
            </shadowData>
            <drawSize>1.23437</drawSize>
        </graphicData>
        <uiIconScale>0.85</uiIconScale>
        <drawerType>MapMeshAndRealTime</drawerType>
        <drawGUIOverlay>true</drawGUIOverlay>

        <size>(1,1)</size>
        <rotatable>true</rotatable>
        <altitudeLayer>Building</altitudeLayer>
        <passability>PassThroughOnly</passability>
        <castEdgeShadows>true</castEdgeShadows>
        <fillPercent>0.5</fillPercent>
        <canOverlapZones>false</canOverlapZones>
        <selectable>true</selectable>
        <thingCategories>
            <li>BuildingsMisc</li>
        </thingCategories>

        <costList>
            <Steel>250</Steel>
            <Plasteel>75</Plasteel>
            <ComponentSpacer>1</ComponentSpacer>
        </costList>
        <researchPrerequisites>
            <li>MicroelectronicsBasics</li>
        </researchPrerequisites>
        <constructionSkillPrerequisite>8</constructionSkillPrerequisite>
        <inspectorTabs>
            <li>ITab_Storage</li>
        </inspectorTabs>
        <statBases>
            <MaxHitPoints>300</MaxHitPoints>
            <WorkToBuild>25000</WorkToBuild>
            <Mass>75</Mass>
            <Flammability>0.1</Flammability>
        </statBases>

        <interactionCellOffset>(0,0,-1)</interactionCellOffset>

        <hasInteractionCell>true</hasInteractionCell>
        <building>
            <destroySound>BuildingDestroyed_Metal_Big</destroySound>
        </building>

        <comps>
            <li Class="CompProperties_Power">
                <compClass>CompPowerTrader</compClass>
                <basePowerConsumption>250</basePowerConsumption>
            </li>
            <li Class="CompProperties_Flickable"/>
            <li Class="CompProperties_ThingContainer">
                <compClass>NeavaMods.CompWeaponContainer</compClass>
                <containedThingOffset>(0,0,0)</containedThingOffset>
                <stackLimit>1</stackLimit>
            </li>
        </comps>

        <designationCategory>Misc</designationCategory>
        <minifiedDef>MinifiedThing</minifiedDef>
    </ThingDef>
</Defs>